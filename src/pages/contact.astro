---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/button.astro';

const offices = [
  {
    country: "Sénégal",
    city: "Dakar",
    address: "Sicap Sacré Cœur 1, Villa 8665",
    phone: "+221 33 837 51 24",
    email: "info@africtivistes.org"
  },
  {
    country: "Côte d'Ivoire",
    city: "Abidjan",
    address: "Cocody Angré, 7ème Tranche",
    phone: "+225 27 22 49 96 70",
    email: "ci@africtivistes.org"
  }
];
---

<Layout 
  title="Contact | Innov Africtivistes"
  description="Contactez-nous pour toute question ou suggestion concernant nos projets et initiatives."
>
  <section class="bg-gradient-to-r from-primary to-accent text-white py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/background.svg')] bg-bottom bg-no-repeat opacity-10"></div>
    <div class="container px-4 relative">
      <h1 class="text-3xl md:text-5xl font-bold mb-4">Contactez-nous</h1>
      <p class="text-xl text-white/80 max-w-3xl">
        Une question, une suggestion ou un projet à discuter ? Nous sommes là pour vous écouter et vous accompagner.
      </p>
    </div>
  </section>

  <section class="py-16 -mt-6 relative z-10">
    <div class="container px-4">
      <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
        <div class="grid md:grid-cols-2">
          <div class="p-8 md:p-12 bg-gradient-to-br from-primary to-accent text-white">
            <h2 class="text-2xl font-bold mb-6">Nos bureaux</h2>
            
            <div class="space-y-8">
              {offices.map((office) => (
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold">{office.country}</h3>
                  <div class="space-y-2">
                    <p class="flex items-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                      {office.city}, {office.address}
                    </p>
                    <p class="flex items-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                      </svg>
                      <a href={`tel:${office.phone}`} class="hover:underline">{office.phone}</a>
                    </p>
                    <p class="flex items-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                      </svg>
                      <a href={`mailto:${office.email}`} class="hover:underline">{office.email}</a>
                    </p>
                  </div>
                </div>
              ))}
            </div>

            <div class="mt-12">
              <h3 class="text-xl font-semibold mb-4">Suivez-nous</h3>
              <div class="flex space-x-4">
                <a href="https://facebook.com/africtivistes" target="_blank" rel="noopener noreferrer" class="bg-white/10 p-2 rounded-full hover:bg-white/20">
                  <span class="sr-only">Facebook</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="https://twitter.com/africtivistes" target="_blank" rel="noopener noreferrer" class="bg-white/10 p-2 rounded-full hover:bg-white/20">
                  <span class="sr-only">Twitter</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
                <a href="https://linkedin.com/company/africtivistes" target="_blank" rel="noopener noreferrer" class="bg-white/10 p-2 rounded-full hover:bg-white/20">
                  <span class="sr-only">LinkedIn</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <div class="p-8 md:p-12">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
                  <input
                    type="text"
                    id="first_name"
                    name="first_name"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                    required
                  />
                </div>
                <div>
                  <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
                  <input
                    type="text"
                    id="last_name"
                    name="last_name"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                    required
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  required
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Sujet</label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  required
                >
                  <option value="">Sélectionnez un sujet</option>
                  <option value="project">Projet</option>
                  <option value="partnership">Partenariat</option>
                  <option value="support">Support</option>
                  <option value="other">Autre</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  required
                ></textarea>
              </div>

              <Button type="submit" class="w-full bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-white rounded-full py-3">
                Envoyer le message
              </Button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gradient-to-r from-primary/5 to-accent/5 rounded-3xl mx-4">
    <div class="container px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-4">FAQ</h2>
        <p class="text-gray-600 mb-8">
          Consultez notre FAQ pour trouver rapidement des réponses à vos questions les plus fréquentes.
        </p>
        <a href="/faq" class="inline-flex items-center justify-center rounded-full bg-primary hover:bg-primary/90 text-white px-6 py-3">
          Voir la FAQ
        </a>
      </div>
    </div>
  </section>
</Layout>
