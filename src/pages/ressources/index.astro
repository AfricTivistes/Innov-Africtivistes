---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/badge.astro';
import Card from '../../components/ui/card.astro';
import { fade } from 'astro:transitions';

const resources = [
  {
    id: 1,
    title: "Guide de l'Innovation Civique",
    description: "Un guide complet pour développer des projets innovants dans le domaine de la démocratie et de la gouvernance.",
    category: "Guide",
    type: "PDF",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "blue"
  },
  {
    id: 2,
    title: "Boîte à outils Civic Tech",
    description: "Collection d'outils et de ressources pour les projets de technologie civique.",
    category: "Toolkit",
    type: "ZIP",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "purple"
  },
  {
    id: 3,
    title: "Formation Gouvernance Numérique",
    description: "Série de modules de formation sur la gouvernance numérique et la démocratie participative.",
    category: "Formation",
    type: "Vidéo",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "amber"
  },
  {
    id: 4,
    title: "Templates de Projet",
    description: "Modèles et templates pour la gestion et la documentation de projets innovants.",
    category: "Template",
    type: "DOC",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "green"
  },
  {
    id: 5,
    title: "Guide de Bonnes Pratiques",
    description: "Recueil de bonnes pratiques pour la mise en œuvre de projets démocratiques.",
    category: "Guide",
    type: "PDF",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "sky"
  },
  {
    id: 6,
    title: "Kit de Communication",
    description: "Ressources pour communiquer efficacement sur vos projets d'innovation.",
    category: "Kit",
    type: "ZIP",
    image: "/placeholder.svg",
    downloadUrl: "#",
    color: "orange"
  }
];

const getColorClass = (color: string) => {
  const colorMap: Record<string, string> = {
    blue: "bg-blue-50 text-blue-700",
    purple: "bg-purple-50 text-purple-700",
    amber: "bg-amber-50 text-amber-700",
    green: "bg-green-50 text-green-700",
    sky: "bg-sky-50 text-sky-700",
    orange: "bg-orange-50 text-orange-700"
  };
  return colorMap[color] || "bg-gray-50 text-gray-700";
};
---

<Layout 
  title="Ressources | Innov Africtivistes"
  description="Accédez à nos ressources pour développer vos projets innovants."
>
  <section class="bg-gradient-to-r from-primary to-accent text-white py-16 relative overflow-hidden" transition:name="hero">
    <div class="absolute inset-0 bg-[url('/background.svg')] bg-bottom bg-no-repeat opacity-10"></div>
    <div class="container px-4 relative" transition:animate={fade({ duration: '0.8s' })}>
      <h1 class="text-3xl md:text-5xl font-bold mb-4">Centre de ressources</h1>
      <p class="text-xl text-white/80 max-w-3xl">
        Découvrez nos guides, outils et formations pour développer vos projets innovants en faveur de la démocratie et de la gouvernance.
      </p>
    </div>
  </section>

  <section class="py-8 border-b -mt-6 relative z-10 bg-white rounded-t-3xl">
    <div class="container px-4">
      <div class="flex flex-col md:flex-row justify-between gap-4">
        <div class="relative w-full md:w-96">
          <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          <input
            type="text"
            placeholder="Rechercher une ressource..."
            class="w-full pl-10 pr-4 py-3 border rounded-full"
          />
        </div>
        <div class="flex gap-2">
          <select class="border rounded-full px-4 py-2">
            <option value="">Tous les types</option>
            <option value="guide">Guides</option>
            <option value="toolkit">Toolkits</option>
            <option value="formation">Formations</option>
            <option value="template">Templates</option>
          </select>
          <select class="border rounded-full px-4 py-2">
            <option value="">Tous les formats</option>
            <option value="pdf">PDF</option>
            <option value="video">Vidéo</option>
            <option value="zip">ZIP</option>
            <option value="doc">DOC</option>
          </select>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="container px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {resources.map((resource) => (
          <Card class="overflow-hidden border-none shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <Badge class={`${getColorClass(resource.color)} border-none`}>
                  {resource.category}
                </Badge>
                <span class="text-sm text-gray-500">{resource.type}</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{resource.title}</h3>
              <p class="text-gray-600 mb-6">{resource.description}</p>
              <a
                href={resource.downloadUrl}
                class="inline-flex items-center justify-center w-full gap-2 rounded-full bg-primary hover:bg-primary/90 text-white px-4 py-2"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="7 10 12 15 17 10"></polyline>
                  <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Télécharger
              </a>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-gradient-to-r from-primary/5 to-accent/5 rounded-3xl mx-4">
    <div class="container px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-4">Vous ne trouvez pas ce que vous cherchez ?</h2>
        <p class="text-gray-600 mb-8">
          Contactez-nous pour demander une ressource spécifique ou proposer l'ajout d'une nouvelle ressource à notre bibliothèque.
        </p>
        <div class="flex justify-center gap-4">
          <a href="/contact" class="inline-flex items-center justify-center rounded-full bg-primary hover:bg-primary/90 text-white px-6 py-3">
            Nous contacter
          </a>
          <a href="/proposer-ressource" class="inline-flex items-center justify-center rounded-full border border-primary text-primary hover:bg-primary/10 px-6 py-3">
            Proposer une ressource
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>