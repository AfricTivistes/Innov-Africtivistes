---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Innov Africtivistes | Plateforme d'innovation pour la démocratie et la gouvernance",
	description = "Découvrez des projets innovants qui promeuvent la démocratie, la gouvernance et l'engagement civique en Afrique."
} = Astro.props;
---
<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body transition:animate="none">
		<Header transition:persist />
		<main transition:animate="fade">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--background: 0 0% 100%;
		--foreground: 222.2 84% 4.9%;
		--card: 0 0% 100%;
		--card-foreground: 222.2 84% 4.9%;
		--popover: 0 0% 100%;
		--popover-foreground: 222.2 84% 4.9%;
		--primary: 230 85% 40%;
		--primary-foreground: 210 40% 98%;
		--secondary: 40 100% 50%;
		--secondary-foreground: 222.2 47.4% 11.2%;
		--accent: 262 83% 58%;
		--accent-foreground: 210 40% 98%;
		--success: 142 76% 36%;
		--success-foreground: 210 40% 98%;
		--info: 199 89% 48%;
		--info-foreground: 210 40% 98%;
		--warning: 35 92% 50%;
		--warning-foreground: 210 40% 98%;
		--danger: 0 84% 60%;
		--danger-foreground: 210 40% 98%;
		--muted: 210 40% 96.1%;
		--muted-foreground: 215.4 16.3% 46.9%;
		--destructive: 0 84.2% 60.2%;
		--destructive-foreground: 210 40% 98%;
		--border: 214.3 31.8% 91.4%;
		--input: 214.3 31.8% 91.4%;
		--ring: 230 85% 40%;
		--radius: 1rem;
	}

	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		background-color: #f8f9fa;
		color: #333;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}
</style>
