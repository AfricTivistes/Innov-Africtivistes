---
// LatestNews.astro
const news = [
  {
    id: 1,
    title: "L'Innovation Démocratique en Afrique de l'Ouest",
    category: "Démocratie",
    date: "28 Mars 2025",
    excerpt: "Découvrez les dernières initiatives qui transforment la participation citoyenne dans la région.",
    image: "/placeholder.svg",
    slug: "innovation-democratique-afrique-ouest"
  },
  {
    id: 2,
    title: "Hackathon pour la Transparence Gouvernementale",
    category: "Événements",
    date: "25 Mars 2025",
    excerpt: "Retour sur trois jours d'innovation intensive pour la transparence et la bonne gouvernance.",
    image: "/placeholder.svg",
    slug: "hackathon-transparence-gouvernementale"
  },
  {
    id: 3,
    title: "Les Jeunes Leaders du Changement Démocratique",
    category: "Leadership",
    date: "22 Mars 2025",
    excerpt: "Portrait de la nouvelle génération qui façonne l'avenir de la démocratie en Afrique.",
    image: "/placeholder.svg",
    slug: "jeunes-leaders-changement-democratique"
  }
];
---

<section class="py-16 bg-gradient-to-r from-blue-50 to-purple-50">
  <div class="container">
    <div class="flex flex-col md:flex-row justify-between items-center mb-12">
      <div>
        <span class="text-primary font-semibold uppercase tracking-wide">ACTUALITÉS</span>
        <h2 class="text-3xl font-bold mt-2">
          Nos Derniers <span class="text-primary">Articles</span>
        </h2>
      </div>
      <a href="/actualites" class="mt-4 md:mt-0 inline-flex items-center rounded-full border border-gray-200 bg-white px-4 py-2 text-sm font-medium hover:bg-gray-100 transition-colors">
        Tous les articles
      </a>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      {news.map((article) => (
        <div class="group overflow-hidden bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="relative h-48">
            <img
              src={article.image}
              alt={article.title}
              class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <span class="absolute top-4 right-4 bg-blue-600 text-white py-1 px-3 rounded-full text-xs font-medium shadow-md">
              {article.category}
            </span>
          </div>

          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 mr-1">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              <span>{article.date}</span>
            </div>

            <h3 class="text-xl font-bold mb-2">{article.title}</h3>
            <p class="text-gray-600 mb-4">
              {article.excerpt}
            </p>

            <a href={`/actualites/${article.slug}`} class="text-primary hover:underline font-medium inline-flex items-center">
              Lire plus
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1 h-4 w-4">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
