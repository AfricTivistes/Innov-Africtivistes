---
// ExpertsSection.astro
interface Expert {
  id: number
  name: string
  role: string
  image: string
  projects: number
  impact: number
  social: {
    facebook?: string
    twitter?: string
    linkedin?: string
    instagram?: string
  }
}

const experts: Expert[] = [
  {
    id: 1,
    name: "Dr. Fatou Ndiaye",
    role: "Experte en Gouvernance Numérique",
    image: "/placeholder.svg",
    projects: 15,
    impact: 1200,
    social: {
      twitter: "#",
      linkedin: "#",
    },
  },
  {
    id: 2,
    name: "John Osei",
    role: "Spécialiste Innovation Civique",
    image: "/placeholder.svg",
    projects: 23,
    impact: 3500,
    social: {
      facebook: "#",
      twitter: "#",
      linkedin: "#",
    },
  },
  {
    id: 3,
    name: "Aisha Mohammed",
    role: "Coordinatrice Programmes",
    image: "/placeholder.svg",
    projects: 18,
    impact: 2800,
    social: {
      twitter: "#",
      linkedin: "#",
      instagram: "#",
    },
  },
  {
    id: 4,
    name: "Pascal Mukeba",
    role: "Expert Démocratie Participative",
    image: "/placeholder.svg",
    projects: 12,
    impact: 1800,
    social: {
      facebook: "#",
      twitter: "#",
      linkedin: "#",
    },
  },
];
---

<section class="py-16">
  <div class="container">
    <div class="text-center mb-12">
      <span class="text-primary font-semibold uppercase tracking-wide">NOTRE ÉQUIPE</span>
      <h2 class="text-3xl font-bold mt-2">
        Nos Experts <span class="text-primary">Innovateurs</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {experts.map((expert) => (
        <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="relative h-[300px] w-full">
            <img
              src={expert.image}
              alt={expert.name}
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

            {/* Social Links */}
            <div class="absolute right-4 top-1/2 -translate-y-1/2 flex flex-col gap-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              {expert.social.facebook && (
                <a
                  href={expert.social.facebook}
                  class="bg-white shadow-md text-primary p-2 rounded-full hover:bg-gray-100"
                  aria-label="Facebook"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
              )}
              {expert.social.twitter && (
                <a
                  href={expert.social.twitter}
                  class="bg-white shadow-md text-primary p-2 rounded-full hover:bg-gray-100"
                  aria-label="Twitter"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                    <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
                  </svg>
                </a>
              )}
              {expert.social.linkedin && (
                <a
                  href={expert.social.linkedin}
                  class="bg-white shadow-md text-primary p-2 rounded-full hover:bg-gray-100"
                  aria-label="LinkedIn"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                    <rect x="2" y="9" width="4" height="12"></rect>
                    <circle cx="4" cy="4" r="2"></circle>
                  </svg>
                </a>
              )}
              {expert.social.instagram && (
                <a
                  href={expert.social.instagram}
                  class="bg-white shadow-md text-primary p-2 rounded-full hover:bg-gray-100"
                  aria-label="Instagram"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
              )}
            </div>
          </div>

          <div class="p-6">
            <h3 class="text-xl font-semibold mb-1">{expert.name}</h3>
            <p class="text-muted-foreground text-gray-500 mb-4">{expert.role}</p>

            <div class="flex justify-between text-sm">
              <div>
                <span class="font-semibold text-primary">{expert.projects}</span>
                <span class="text-muted-foreground text-gray-500 ml-1">Projets</span>
              </div>
              <div>
                <span class="font-semibold text-primary">{expert.impact}</span>
                <span class="text-muted-foreground text-gray-500 ml-1">Bénéficiaires</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Ajoutez ici des styles spécifiques si nécessaire */
  .group:hover .opacity-0 {
    opacity: 1;
  }
</style>
