---
interface Props {
  placeholder?: string;
  class?: string;
}

const { placeholder = "Rechercher...", class: className } = Astro.props;
---

<div class={`relative ${className || ''}`}>
  <svg
    class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 20 20"
    fill="currentColor"
  >
    <path
      fill-rule="evenodd"
      d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
      clip-rule="evenodd"
    />
  </svg>
  <input
    type="search"
    placeholder={placeholder}
    class="w-full rounded-md border border-input pl-10 pr-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-ring"
  />
</div>
